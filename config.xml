<?xml version="1.0" encoding="utf-8" standalone="no"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" id="br.alfa.Ardussivel" version="1.0.2">
    <name>Ardussivel</name>
    <description>
        Aplicativo para iteração com web service comunicando com Arduino
    </description>
    <author email="chenriquelemos@gmail.com" href="https://www.facebook.com/carloshlemos">
        Carlos Henrique Lemos
    </author>
    <content src="index.html"/>
    <plugin name="cordova-plugin-whitelist" version="1"/>
    <access origin="*"/>
    
    <!-- The above is equivalent to these three declarations -->
	<allow-navigation href="http://*/*" />
	<allow-navigation href="https://*/*" />
	<allow-navigation href="data:*" />
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
	
    <platform name="android">
        <allow-intent href="market:*"/>
    </platform>
    
    
</widget>
